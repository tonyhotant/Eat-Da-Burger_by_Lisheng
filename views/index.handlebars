<h1>Eat-Da-Burger!</h1>

<h2>Let's eat some burgers!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> cats/cat-block sleep=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> cats/cat-block sleep=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="slee">Devoured?</label><br>
        <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
        <input type="radio" name="sleepy" value="0"> Awake
    </div>

    <button type="submit">Add Burger</button>
</form>