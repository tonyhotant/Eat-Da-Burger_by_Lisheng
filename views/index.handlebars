<h1>Eat-Da-Burger</h1>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            {{#each burger}}
            {{#unless this.devoured}}
            <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
                <div class="form-group">
                    <ul>
                        <li>
                            <button type="submit" name="devoured" value="1"
                                class="btn btn-mustard">{{burger_name}}</button>
                        </li>
                    </ul>
                </div>
            </form>
            {{/unless}}
            {{/each}}
        </div>
        <div class="col-md-4">
            <form action="/api/burgers" method="POST">
                <div class="form-group">
                    <input type="text" name="burger_name" class="form-control text-center" maxlength="50"
                        placeholder="Enter Burger Name">
                    <button class="btn btn-ketchup btn-block my-2" type="submit">Add Burger</button>
                </div>
            </form>
        </div>
        <div class="col-md-4">
            <h2>Burgers Devoured</h2>
            {{#each burger}}
            {{#if this.devoured}}
            <div>
                <ul>
                    <li>
                        <button disabled class="btn btn-mustard">{{burger_name}}</button>
                    </li>
                </ul>
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>